<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.TaskEditView"
        x:DataType="vm:TaskEditViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Height="400"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="Gray"
        Title="{Binding Localization.EditTaskWindowName}">
    
    <Design.DataContext>
        <vm:MockTaskEditViewModel/>
    </Design.DataContext>
    
    <Border Margin="5" Background="DarkGray" CornerRadius="5">
        <Grid RowDefinitions="Auto * Auto" >
            <Border>
                <TextBox Text="{Binding TaskToEdit.TaskModel.Name}"/>
            </Border>
            <Border Grid.Row="1">
                <TextBox Text="{Binding TaskToEdit.TaskModel.Description}"/>
            </Border>
            <Button Grid.Row="2" Command="{Binding SaveAndExitCommand}" Content="{Binding BackButtonText}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10 10 5 10"/>
        </Grid>
    </Border>
</Window>
