<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="50"
        x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.SessionWindow"
        x:DataType="vm:SessionViewModel"
        Width="500"
        Height="80"
        Title="Session window"
        Background="Gray"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/avalonia-logo.ico"
        CanResize="False"
        >
    <Grid ColumnDefinitions="Auto *">
        <TextBlock VerticalAlignment="Center" FontSize="19" Margin="5 10" HorizontalAlignment="Center" Text="{Binding TimeInformationText}"/>
        <TransitioningContentControl Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding CurrentSessionPage}"/>
    </Grid>
</Window>
