<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="50"
        x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.SessionWindow"
        x:DataType="vm:SessionViewModel"
        Width="550"
        Height="80"
        Title="{Binding  Groups.Localization.SessionWindow}"
        Background="Gray"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/TimeManagementLogo.ico"
        CanResize="False"
        >
    <Grid ColumnDefinitions="200 *">
        <ContentControl Content="{Binding Timer}"/>
        <TransitioningContentControl Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding CurrentSessionPage}"/>
    </Grid>
</Window>
