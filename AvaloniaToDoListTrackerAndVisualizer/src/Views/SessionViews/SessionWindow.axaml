<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="75"
        x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.SessionWindow"
        x:DataType="vm:SessionViewModel"
        Width="250"
        Height="75"
        Title="Session window"
        Background="LightGray"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/avalonia-logo.ico"
        >
    <StackPanel>
        <TextBlock Margin="10 5" HorizontalAlignment="Center" Text="{Binding TimeInformationText}"/>
        <TransitioningContentControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding CurrentSessionPage}"/>
    </StackPanel>
</Window>
