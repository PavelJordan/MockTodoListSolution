<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.PomodoroTimerView"
             xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
             x:DataType="vm:PomodoroTimerViewModel"
             >
    
    <Design.DataContext>
        <vm:PomodoroTimerViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto Auto *">
        <TextBlock Margin="1" Text="{Binding Timer.TaskTimeInformationText}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Grid.Row="1" Margin="1" Text="{Binding Timer.PomodoroInformationText}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Command="{Binding SwitchWorkBreakCommand}" Margin="1" FontSize="13" Content="{Binding Timer.PomodoroButtonText}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
    </Grid>
    
</UserControl>
