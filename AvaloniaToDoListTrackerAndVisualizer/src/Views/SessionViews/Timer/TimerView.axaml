<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.TimerView"
             xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
             x:DataType="vm:TimerViewModel"
             >
    
    <Design.DataContext>
        <vm:TimerViewModel/>
    </Design.DataContext>
    
    <Grid>
        <TransitioningContentControl Content="{Binding SelectedTimer}"  Margin="10 10 3 10"/>
    </Grid>
</UserControl>
