<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaToDoListTrackerAndVisualizer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaToDoListTrackerAndVisualizer.Views.HomeView"
             x:DataType="vm:HomeViewModel"
             >
    <Panel Classes="right_hand_content" x:Name="ParentPanel">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Button Background="{Binding ReadyButtonBackground}" Content="{Binding Localization.ReadyButton}" Command="{Binding showReadyCommand}"></Button>
                <Button Background="{Binding CompletedButtonBackground}" Content="{Binding Localization.DoneButton}" Command="{Binding showCompletedCommand}"></Button>
                <Button Background="{Binding AllButtonBackground}" Content="{Binding Localization.AllButton}" Command="{Binding showAllCommand}"></Button>
            </StackPanel>
            
            <Border BorderBrush="DarkGray" BorderThickness="3" CornerRadius="5">
                <ScrollViewer Background="DarkGray">
                    <ScrollViewer.Resources>
                    </ScrollViewer.Resources>
                    <ItemsControl ItemsSource="{Binding CurrentTaskList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Gray" Margin="0 5 0 5" CornerRadius="5">
                                    <Grid ColumnDefinitions="Auto, *, Auto" >
                                        <Button Command="{Binding CompleteButtonClickedCommand}" Foreground="{Binding CompleteButtonColor}" FontWeight="DemiBold" Content="{Binding CompleteButtonText}"  Grid.Column="0" Background="DimGray" Margin="2 2 4 2" />
                                        <TextBlock VerticalAlignment="Center" Text="{Binding TaskModel.Name}" Grid.Column="1" />
                                        <Button Command="{Binding DetailsCommand}" Content="{Binding Localization.DetailsButton}"  Grid.Column="2" Margin="4 2 2 2"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Panel>
</UserControl>
